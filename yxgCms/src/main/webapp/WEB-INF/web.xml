	<!-- tile2 tag for ftl -->
	<jsp-config>
		<taglib>
			<taglib-uri>http://tiles.apache.org/tags-tiles</taglib-uri>
			<taglib-location>/WEB-INF/dtd/tiles2-jsp.tld</taglib-location>
		</taglib>
	</jsp-config>
</web-app>